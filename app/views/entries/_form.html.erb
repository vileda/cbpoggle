<% set_locale 'de' %>
<% form_remote_for @entry, :html => { :id => 'entry_form' } do |f| %>
  <p>
    <%= f.label :date, 'Datum' %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :purpose, 'Zweck' %><br />
    <%= f.text_field :purpose %>
  </p>
  <p>
    <%= f.label :revenue, 'Einnahme' %><br />
    <%= f.text_field :revenue %> €
  </p>
  <p>
    <%= f.label :expenditure, 'Ausgabe' %><br />
    <%= f.text_field :expenditure %> €
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
