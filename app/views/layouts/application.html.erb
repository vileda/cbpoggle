<% set_locale 'de' %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
		<%= stylesheet_link_tag 'print', :media => 'print'%>
		<%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
		<div class="subcolumns">
			<div class="subc" id="userbar">
				<%= render :partial => 'users/user_bar' %>
			</div>
			<div class="subc" id="main_menu">
				<%= link_to "KassenbÃ¼cher", cash_books_path %>
			</div>
				<div class="subc" id="main_content">
					<div class="subc" id="notice">
						<%- flash.each do |name, msg| -%>
					  	<%= content_tag :div, msg, :id => "flash_#{name}" %>
					  <%- end -%>
					</div>
					<%- if show_title? -%>
		        <h1><%=h yield(:title) %></h1>
						<hr />
		      <%- end -%>
					<div class="subc" id="sub_menu">
						<%= yield(:sub_menu) %>
					</div>
					<div class="subc" id="content">
						<%= yield %>	
					</div>
					
					<br />
				</div>
		</div>
    </div>
  </body>
</html>
